<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".GetStarted"
    android:background="@color/white"
    android:paddingHorizontal="20dp">



    <TextView

        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:fontFamily="@font/opensans_semibold"
        android:text="Account"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp"
        android:onClick="add">

    </TextView>

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/account_circle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/account_circle"
        android:layout_below="@id/heading"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp">

    </de.hdodenhof.circleimageview.CircleImageView>

    <LinearLayout

        android:id="@+id/NameField"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/account_circle"
        android:background="@drawable/edittext_bg"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="3"
       >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Name:"
            android:textColor="@color/lightBlack"
            android:fontFamily="@font/opensans_regular"
            android:paddingLeft="11dp"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/edittext_bg"
            android:textSize="14sp"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:textColor="@color/lightBlack"
            />

    </LinearLayout>

    <LinearLayout

        android:id="@+id/EmailField"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/NameField"
        android:background="@drawable/edittext_bg"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Email:"
            android:textColor="@color/lightBlack"
            android:fontFamily="@font/opensans_regular"
            android:paddingLeft="11dp"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/edittext_bg"
            android:textSize="14sp"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:textColor="@color/lightBlack"
            />

    </LinearLayout>

    <LinearLayout

        android:id="@+id/AddressField"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/EmailField"
        android:background="@drawable/edittext_bg"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Address:"
            android:textColor="@color/lightBlack"
            android:fontFamily="@font/opensans_regular"
            android:paddingLeft="11dp"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/edittext_bg"
            android:textSize="14sp"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:textColor="@color/lightBlack"
            />

    </LinearLayout>


    <LinearLayout

        android:id="@+id/PasswordField"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/AddressField"
        android:background="@drawable/edittext_bg"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Password:"
            android:textColor="@color/lightBlack"
            android:fontFamily="@font/opensans_regular"
            android:paddingLeft="11dp"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/edittext_bg"
            android:textSize="14sp"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:textColor="@color/lightBlack"
            />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/PasswordField"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">



        <Button
            android:id="@+id/Edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/Logout"
            android:layout_alignParentStart="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/opensans_semibold"
            android:text="Edit"
            android:textSize="14sp"
            android:layout_weight="1"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/Logout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/Edit"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button2_bg"
            android:fontFamily="@font/opensans_semibold"
            android:text="Logout"
            android:textSize="14sp"
            android:layout_weight="1" />

        </LinearLayout>

    </RelativeLayout>










</RelativeLayout>