<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:background="@color/white">

    <RelativeLayout


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <!-- Image View on the Left -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:src="@drawable/book_cover"
            android:contentDescription="Image"

            />

        <!-- Vertical Layout for Text Content on the Right -->
        <RelativeLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imageView"
            android:layout_alignBottom="@id/imageView"
            android:layout_toEndOf="@id/imageView"
            android:background="@color/chocolate"
            android:padding="10dp">

            <!-- Text Views for Content -->
            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Classic"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/opensans_light" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Picture of Dorian Gray"
                android:textSize="16sp"
                android:fontFamily="@font/opensans_semibold"
                android:layout_below="@id/category"
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kate Racculia"
                android:textSize="12sp"
                android:layout_below="@id/title"
                android:fontFamily="@font/opensans_regular"
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs 3000"
                android:textSize="20sp"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp"/>

        </RelativeLayout>
        <ImageView
            android:id="@+id/edit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/edit"
            android:layout_below="@id/ll"
            android:padding="5dp"
            />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/delete"
            android:layout_below="@id/ll"
            android:layout_toEndOf="@id/edit"
            android:padding="5dp"
            />


    </RelativeLayout>


</androidx.cardview.widget.CardView>
