<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetStarted"
    android:background="@color/white"
    android:paddingHorizontal="20dp">

    <ImageView
        android:id="@+id/back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/arrow_back"
        android:layout_alignTop="@id/getStarted"
        android:layout_alignBottom="@id/getStarted"
        >

    </ImageView>

    <TextView

        android:id="@+id/getStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:fontFamily="@font/opensans_semibold"
        android:text="Get Started"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp">

    </TextView>

    <TextView
        android:id="@+id/fillDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/opensans_regular"
        android:text="Please fill your details to login"
        android:textColor="@color/black"
        android:layout_below="@id/getStarted"
        android:layout_marginTop="80dp"/>
    
    <EditText

        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/fillDetails"
        android:background="@drawable/edittext_bg"
        android:hint="Username/email"
        android:textColorHint="@color/lightBlack"
        android:paddingLeft="11dp"
        android:textSize="14sp"
        android:fontFamily="@font/opensans_regular"
        android:layout_marginTop="32dp"/>

    <EditText

        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/email"
        android:background="@drawable/edittext_bg"
        android:hint="Password"
        android:textColorHint="@color/lightBlack"
        android:paddingLeft="11dp"
        android:textSize="14sp"
        android:fontFamily="@font/opensans_regular"
        android:layout_marginTop="32dp"/>
    
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/eye"
        android:background="@drawable/edittext_bg"
        android:layout_below="@id/email"
        android:layout_marginTop="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="11dp"
        />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/password"
        android:background="@drawable/button_bg"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/opensans_semibold"
        android:layout_marginTop="32dp"
        android:textAllCaps="false"
        />

    <TextView

        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forgot password?"
        android:fontFamily="@font/opensans_regular"
        android:textSize="14sp"
        android:layout_below="@id/login"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"/>

    <RelativeLayout

        android:id="@+id/registerNewMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <TextView

            android:id="@+id/newMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New member? "
            android:fontFamily="@font/opensans_regular"
            android:textSize="14sp"
            android:layout_marginBottom="40dp"

            android:textColor="@color/black"/>

        <TextView

            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:fontFamily="@font/opensans_semibold"
            android:textSize="14sp"
            android:layout_marginBottom="40dp"
            android:layout_toRightOf="@+id/newMember"
            android:textColor="@color/black"/>


    </RelativeLayout>


</RelativeLayout>